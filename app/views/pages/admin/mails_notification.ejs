<!doctype html>
<html lang="en" class="h-100">

<head>
    <%- include('../../partials/head'); %>

        <!-- css -->
        <% if(typeof sheets!=='undefined' ) { %>
            <% for(let sheet of sheets) { %>
                <link href="/css/<%= sheet %>.css" rel="stylesheet">
                <% } %>
                    <% } %>
</head>

<body class="h-100">
    <%- include('../../partials/header'); %>

        <div class="container-fluid pb-3 h-100" style="padding-top: 90px;">
            <div class="row w-100 h-100" style="flex-wrap:nowrap">
                <%- include('../../partials/sidebar', {level:''}); %>

                    <main id="main-content" class="col overflow-auto">
                        <div class="row">
                            <div class="col">
                                <h5>
                                    <i class="icon-users"></i>
                                    Correos para notificaci√≥n
                                </h5>
                            </div>
                        </div>

                        <div class="row mt-3">
                            <form id="button-container" class="col">
                                    <input type="button" class="btn-check" name="btn-new-user" id="btn-new-user">
                                    <label class="btn btn-outline-primary" for="btn-new-user">Nuevo + </label>
                            </form>
                        </div>

                        <div class="row my-3">
                            <div class="col">
                                <div class="card border-light bg-primary shadow">
                                    <div class="card-body">
                                        <table id="users-table" class="display table bg-primary table-sm text-white"
                                            style="width: 100%;">
                                            <thead>
                                                <tr>
                                                    <th>NOMBRE</th>
                                                    <th>APELLIDO</th>
                                                    <th>CORREO</th>
                                                    <th>ACTIVO</th>
                                                    <th>EDITAR</th>
                                                </tr>
                                            </thead>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </main>
            </div>
        </div>

        <!-- Modal -->
        <div class="modal fade" id="userModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="exampleModalLabel">Usuario</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="row mt-3 my-3">
                            <div class="col">
                                <div class="card border-light bg-primary shadow">
                                    <div class="card-body">
                                        <form>
                                            <div class="row" style="margin-bottom: 10px;">
                                                <div class="col">
                                                    <label for="mail_name"
                                                        class="form-label text-white"><strong>Nombre</strong></label>
                                                    <input class="form-control" type="input" id="mail_name"
                                                        name="mail_name">

                                                </div>

                                                <div class="col">
                                                    <label for="mail_lastname"
                                                        class="form-label text-white"><strong>Apellido</strong></label>
                                                    <input class="form-control" type="input" id="mail_lastname"
                                                        name="mail_lastname">

                                                </div>
                                            </div>
                                            <div class="row" style="margin-bottom: 10px;">
                                                <div class="col">
                                                    <label for="mail_mail"
                                                        class="form-label text-white"><strong>Correo</strong></label>
                                                    <input class="form-control" type="input" id="mail_mail"
                                                        name="mail_mail">
                                                </div>
                                                <div class="col-active">
                                                    <label for="mail_active"
                                                        class="form-label text-white"><strong>Activo</strong></label>
                                                    <input class="form-check-input" type="checkbox" value=""
                                                        id="mail_active">
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary" id="save_user">Guardar</button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Modal -->
        <%- include('../../partials/modal') %>

            <% if(typeof libs!=='undefined' ) { %>
                <% for(let lib of libs) { %>
                    <script src='/js/<%= lib %>.js' type='text/javascript'></script>
                    <% } %>
                        <% } %>
</body>

</html>