<!doctype html>
<html lang="en" class="h-100">

<head>
    <%- include('../../partials/head'); %>

        <!-- css -->
        <% if(typeof sheets!=='undefined' ) { %>
            <% for(let sheet of sheets) { %>
                <link href="/css/<%= sheet %>.css" rel="stylesheet">
                <% } %>
                    <% } %>
</head>

<body class="h-100">
    <%- include('../../partials/header'); %>

        <div class="container-fluid pb-3 h-100" style="padding-top: 90px;">
            <div class="row w-100 h-100" style="flex-wrap:nowrap">
                <%- include('../../partials/sidebar', {level:''}); %>

                    <main id="main-content" class="col overflow-auto">
                        <div class="row">
                            <div class="col">
                                <h5>
                                    <i class="icon-basket"></i>
                                    Logs flujos
                                </h5>
                            </div>
                        </div>

                        <div class="row mt-3">
                            <form id="button-container" class="col">
                                <div class="btn-group btn-group-sm" role="group" aria-label="radio toggle button group">
                                    <input type="radio" class="btn-check" name="btnradio" id="btn-todos" value="todos"
                                        autocomplete="off" checked>
                                    <label class="btn btn-outline-primary" for="btn-todos">Todos</label>

                                    <input type="radio" class="btn-check" name="btnradio" id="btn-correctos"
                                        value="correctos" autocomplete="off">
                                    <label class="btn btn-outline-primary" for="btn-correctos">Correctos</label>

                                    <input type="radio" class="btn-check" name="btnradio" id="btn-error" value="error"
                                        autocomplete="off">
                                    <label class="btn btn-outline-primary" for="btn-error">Error</label>
                                </div>
                            </form>
                        </div>

                        <div class="row my-3">
                            <div class="col">
                                <div class="card border-light bg-primary shadow">
                                    <div class="card-body">
                                        <div class="table-responsive">
                                        <table id="logsFlows-table" class="display table bg-primary table-sm text-white"
                                            style="width: 100%;">
                                        </table>
                                    </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </main>
            </div>
        </div>

        <!-- Modal -->
        <%- include('../../partials/modal') %>

            <% if(typeof libs!=='undefined' ) { %>
                <% for(let lib of libs) { %>
                    <script src='/js/<%= lib %>.js' type='text/javascript'></script>
                    <% } %>
                        <% } %>
</body>

</html>