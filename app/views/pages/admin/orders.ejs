<!doctype html>
<html lang="en" class="h-100">

<head>
    <%- include('../../partials/head'); %>

        <!-- css -->
        <% if(typeof sheets!=='undefined' ) { %>
            <% for(let sheet of sheets) { %>
                <link href="/css/<%= sheet %>.css" rel="stylesheet">
                <% } %>
                    <% } %>
</head>

<body class="h-100">
    <%- include('../../partials/header'); %>

        <div class="container-fluid pb-3 h-100" style="padding-top: 90px;">
            <div class="row w-100 h-100" style="flex-wrap:nowrap">
                <%- include('../../partials/sidebar', {level:''}); %>

                    <main id="main-content" class="col overflow-auto">
                        <div class="row">
                            <div class="col">
                                <h5>
                                    <i class="icon-basket"></i>
                                    Ordenes
                                </h5>
                            </div>
                        </div>

                        <div class="row mt-3">
                            <form id="button-container" class="col">
                                <div class="btn-group btn-group-sm" role="group" aria-label="radio toggle button group">
                                    <input type="radio" class="btn-check" name="btnradio" id="btn-todas" value="todas"
                                        autocomplete="off" checked>
                                    <label class="btn btn-outline-primary" for="btn-todas">Todas</label>

                                    <input type="radio" class="btn-check" name="btnradio" id="btn-aprobadas"
                                        value="aprobadas" autocomplete="off">
                                    <label class="btn btn-outline-primary" for="btn-aprobadas">Aprobadas</label>

                                    <input type="radio" class="btn-check" name="btnradio" id="btn-rechazadas"
                                        value="rechazadas" autocomplete="off">
                                    <label class="btn btn-outline-primary" for="btn-rechazadas">Rechazadas</label>
                                </div>
                            </form>
                        </div>

                        <div class="row my-3">
                            <div class="col">
                                <div class="card border-light bg-primary shadow">
                                    <div class="card-body">
                                        <table id="orders-table" class="display table bg-primary table-sm text-white"
                                            style="width: 100%;">
                                            <thead>
                                                <tr>
                                                    <th>ORDER_NUM_CLI</th>
                                                    <th>PAIS_VENTA</th>
                                                    <th>PARTN_NUMB</th>
                                                    <th>PARTN_NUMB2</th>
                                                    <th>MATERIAL</th>
                                                    <th>TARGET_QTY</th>
                                                    <th>SALES_UNIT</th>
                                                    <th>MONEDA</th>
                                                    <th>PRECIO</th>
                                                    <th>PLANT</th>
                                                    <th>GC3</th>
                                                    <th>OBSPED</th>
                                                </tr>
                                            </thead>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </main>
            </div>
        </div>

        <!-- Modal -->
        <%- include('../../partials/modal') %>

            <% if(typeof libs!=='undefined' ) { %>
                <% for(let lib of libs) { %>
                    <script src='/js/<%= lib %>.js' type='text/javascript'></script>
                    <% } %>
                        <% } %>
</body>

</html>