<!doctype html>
<html lang="en" class="h-100">
    <head>
        <%- include('../../partials/head', {versionDonbot: versionDonbot}); %>

        <!-- css -->
        <% if(typeof sheets!=='undefined' ) { %>
            <% for(let sheet of sheets) { %>
                <link href="/css/<%= sheet %>.css" rel="stylesheet">
            <% } %>
        <% } %>
    </head>

    <body class="h-100">
        
      <main class="form-signin w-100 m-auto">
        <form>
          <img class="mb-4" src="https://cdn.shopify.com/s/files/1/0619/2404/9094/files/Logo-negro-GBM-2023.png?v=1707511066" alt="" width="200" height="100">
          <h1 class="h3 mb-3 fw-normal blanco">Sign in to DonBot</h1>
      
          <div class="form-floating">
            <input type="email" class="form-control" id="email" placeholder="name@example.com">
            <label for="email">Email address</label>
          </div>
          <div class="form-floating">
            <input type="password" class="form-control" id="password" placeholder="Password">
            <label for="password">Password</label>
          </div>
      
          <div class="checkbox mb-3">
            <label class="blanco">
              <input type="checkbox" value="remember-me"> Remember me
            </label>
          </div>
          <button class="w-100 btn btn-lg btnGbm" type="submit" id="btnLogin">Sign in</button>
          <p class="mt-5 mb-3 text-muted">&copy; 2021â€“2022</p>
        </form>
      </main>

        <!-- js -->
        <% if(typeof libs!=='undefined') { %>
            <% for(let lib of libs) { %>
                <script src='/js/<%= lib %>.js' type='text/javascript'></script>
            <% } %>
        <% } %>
    </body>
</html>